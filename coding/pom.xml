<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.JavaCode</groupId>
        <artifactId>JavaCode</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>java</artifactId>
    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <build>
        <sourceDirectory>${basedir}/src</sourceDirectory>
        <!-- {baseDir} gives the folder location where java module's Pom.xml file is placed. It gives - JavaCode/java.
        The default SourceDirectory is => src/main/java. But now, We are forcing the IDE to take JavaCode/java/src as the SourceDirectory.
        Optionally, you can right-click on the folder and make the directory as source.
        -->
        <resources>
            <resource>
                <directory>${basedir}/resources</directory>
            </resource>
        </resources>
    </build>
</project>